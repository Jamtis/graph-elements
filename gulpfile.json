{
    "bundles": {
        "app": {
            "scripts": {
                "src": "src/**/*.js",
                "dest": "build",
                "chain": ["gulp-inject-file", "gulp-babel"],
                "dependencies": ["stylesheets", "inject-scripts"],
                "watch": false
            },
            "inject-scripts": {
                "src": "src/**/*.inject.js",
                "dest": "build",
                "chain": ["gulp-babel"],
                "watch": false
            },
            "stylesheets": {
                "src": "src/**/*.less",
                "dest": "build",
                "chain": ["gulp-less", "gulp-clean-css"],
                "watch": false
            }
        }
    },
    "modules": {
        "gulp-less": {
            "ieCompat": false,
            "compress": false,
            "optimization": 0
        },
        "gulp-clean-css": {},
        "gulp-babel-minify": {
            "mangle": false,
            "simplify": false
        },
        "gulp-babel": {
            "plugins": ["syntax-dynamic-import", "transform-class-properties"]
        },
        "gulp-esformatter": {},
        "gulp-inject-file": {}
    }
}