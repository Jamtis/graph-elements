{
    "base": "src",
    "config": {
        "htmlmin": {
            "removeComments": true,
            "useShortDoctype": true,
            "customAttrAssign": ["?=", "$="],
            "minifyJS": true,
            "minifyCSS": false,
            "collapseWhitespace": true
        },
        "babel": {
            "compact": false,
            "comments": true,
            "presets": ["stage-3"],
            "plugins": ["transform-es2015-modules-umd"]
        },
        "mocha": {
            "reporter": "json"
        },
        "uglify": {
            "beautify": true,
            "compress": {
                "sequences": false,
                "properties": true,
                "dead_code": true,
                "drop_debugger": false,
                "conditionals": true,
                "comparisons": true,
                "evaluate": true,
                "booleans": true,
                "loops": true,
                "unused": true,
                "hoist_funs": true,
                "if_return": true,
                "join_vars": true,
                "cascade": true,
                "negate_iife": true
            },
            "mangle": false,
            "screwIe8": true
        },
        "less": {
            "ieCompat": false,
            "compress": false,
            "optimization": 0
        },
        "clean-css": {}
    },
    "packages": {
        "apps": {
            "html": {
                "src": "src/apps/**/*.html",
                "tasks": [
                    ["htmlmin"]
                ]
            },
            "scripts": {
                "src": "src/apps/**/*.js",
                "tasks": [
                    ["babel", {
                        "plugins": []
                    }]
                ]
            },
            "less": {
                "src": "src/apps/**/*.less",
                "tasks": [
                    ["less"],
                    ["clean-css"]
                ]
            }
        },
        "elements": {
            "html": {
                "src": "src/elements/**/*.html",
                "tasks": [
                    ["htmlmin"]
                ]
            },
            "scripts": {
                "src": "src/elements/**/*.js",
                "tasks": [
                    ["babel", {
                        "plugins": []
                    }]
                ]
            },
            "less": {
                "src": "src/elements/**/*.less",
                "tasks": [
                    ["less"],
                    ["clean-css"]
                ]
            }
        },
        "lib": {
            "scripts": {
                "src": "src/lib/**/*.js",
                "tasks": [
                    ["babel"]
                ]
            }
        },
        "tests": {
            "scripts": {
                "src": "src/tests/**/*.js",
                "tasks": [
                    ["babel", {
                        "plugins": []
                    }],
                    ["mocha"]
                ]
            }
        }
    }
}